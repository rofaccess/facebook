<!DOCTYPE html>
<html>
<head>
  <title>Facebook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar" type="button">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
           <a href="#" class="brand" style="font-size:20pt;font-weight: bold;">facebook</a>          
           <div class="btn-group pull-right">
            	<% if user_signed_in? %>
    				<a class="btn btn-primary"><i class="icon-user icon-white"></i>  <%= current_user.email %></a>
    				<a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
    				<ul class="dropdown-menu">
    					<li><%= link_to 'Editar Perfil', edit_user_registration_path %></li>
    					<li><%= link_to "Salir", destroy_user_session_path, method: :delete %></li>
    
    				</ul>
    			<% end %>	
   			</div>			
        </div>
      </div>
    </div>      
	<div class="container">
  		<div class="row-fluid">    
    		<div class="span8">    
    			<%= yield %>	
			</div>    
    		<div class="span4">
    			<h3> Amigos</h3>
    			<fieldset>    					
    				<legend></legend>
    			</fieldset>
    			
    		</div>      
  		</div>
  </div>
</body>
</html>

